<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>登録</title>
    <style>
    .alert {
      color: #a94442;
      background-color: #f2dede;
      border-color: #ebccd1;
    }
    </style>
  </head>
  <body>
    <h1>登録</h1>
    <% if (locals.errors) { %>
    <ul class="alert">
    <%   for (var i = 0; i < errors.length; i++) { %>
      <li><%= errors[i]%></li>
    <%   } %>
    </ul>
    <% } %>
    <form id="form" method="POST" action="">
      <div>
        <label for="name">氏名：</label>
        <input type="text" id="name" name="name" value="<%= locals.name ? name : ""%>"/>
      </div>
      <div>
          <label for="age">年齢：</label>
          <input type="text" id="age" name="age" value="<%= locals.age ? age : ""%>"/>
        </div>
      <div>
      <div>
          <label for="sex">性別：</label>
          <input type="text" id="sex" name="sex" value="<%= locals.sex ? sex : ""%>"/>
       </div>
       <div>
          <label for="tel">電話番号：</label>
          <input type="text" id="tel" name="tel" value="<%= locals.tel ? tel : ""%>" />
      </div>
      <div>
          <label for="zipcode">郵便番号：</label>
          <input type="text" id="zipcode" name="zipcode" value="<%= locals.zipcode ? zipcode : ""%>" />
      </div>
      <div>
        <label for="location">住所：</label>
        <input type="text" id="location" name="location" value="<%= locals.location ? location : ""%>"/>
      </div>
      <div>
        <input type="button" id="btn-save" value="保存" />
        <input type="submit" id="btn-read" value="読み出し" />
      </div>
    </form>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/public/scripts/shop/regist/input.js"></script>
    <script type="text/javascript" src="/public/scripts/shop/regist/protect-double-submit.js"></script>
  </body>
</html>